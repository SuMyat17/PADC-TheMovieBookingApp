<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/margin_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCreditCard"
        android:layout_width="@dimen/margin_xlarge"
        android:layout_height="@dimen/margin_xlarge"
        android:src="@drawable/ic_baseline_credit_card_black_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCreditCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_toEndOf="@id/ivCreditCard"
        android:text="Credit Card"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCreditCardComponents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCreditCardTitle"
        android:layout_alignStart="@id/tvCreditCardTitle"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_small"
        android:text="Visa, master card, JCB" />

</RelativeLayout>